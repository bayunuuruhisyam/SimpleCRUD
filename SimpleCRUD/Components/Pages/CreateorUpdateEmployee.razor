@using MudBlazor
@using SimpleCRUD.Enum
@using SimpleCRUD.Services
@using SimpleCRUD.ViewModels

@inject ISnackbar Snackbar
@inject EmployeeService EmployeeService

<MudDialog>
    <DialogContent>
        <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />

            <MudGrid Class="mb-4">
                <MudItem xs="9">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="FullName"
                                  @bind-Value="model.FullName"
                                  For="@(() => model.FullName)" />
                </MudItem>

                <MudItem xs="3">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="Age"
                                  @bind-Value="model.Age"
                                  For="@(() => model.Age)" />
                </MudItem>
            </MudGrid >

            <MudDatePicker Variant="Variant.Outlined"
                           Label="Date Of Birth"
                           @bind-Date="_date" />

            <MudTextField  Variant="Variant.Outlined"
                          Label="Department"
                          @bind-Value="model.Department"
                          For="@(() => model.Department)" />

            <MudTextField Variant="Variant.Outlined"
                          Label="Phone Number"
                          @bind-Value="model.PhoneNumber"
                          For="@(() => model.PhoneNumber)" />
            <MudItem Class="py-3">
            <DialogActions>
                <MudButton ButtonType="ButtonType.Submit"
                               class="me-2"
                               Color="Color.Primary"
                               Variant="Variant.Filled">
                             Save
                </MudButton>

                <MudButton Variant="Variant.Outlined"
                           OnClick="Cancel">
                    Cancel
                </MudButton>
            </DialogActions>
            </MudItem>
        </EditForm>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public UIActionEnum Action { get; set; } = UIActionEnum.Insert;

    [Parameter]
    public DateTime? _date { get; set; } = DateTime.Today;

    [Parameter]
    public EmployeeViewModel model { get; set; } = new EmployeeViewModel();

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }


    private async Task OnValidSubmit(EditContext editContext)
    {
        if (_date is not null)
        {
            model.DateOfBirth = _date.Value;
        }

        if (Action == UIActionEnum.Insert)
        {
            CreateEmployee();
        }
        else if (Action == UIActionEnum.Update)
        {
            UpdateEmployee();
        }

    }
    private void CreateEmployee()
    {
        var result = EmployeeService.CeateNewEmployee(model);

        if (result)
        {
            Snackbar.Add("Employee Add successfully!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add("Error saving employee.", Severity.Error);
        }
    }

    private void UpdateEmployee()
    {
        var result = EmployeeService.UpdateEmployee(model);

        if (result)
        {
            Snackbar.Add("Employee Update successfully!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add("Error saving employee.", Severity.Error);
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
