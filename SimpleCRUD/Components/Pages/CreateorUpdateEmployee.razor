@using MudBlazor
@using SimpleCRUD.Enum
@using SimpleCRUD.Services
@using SimpleCRUD.ViewModels

@inject ISnackbar Snackbar
@inject EmployeeService EmployeeService

<MudDialog>
    <DialogContent>
        <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />

            <MudGrid Class="mb-4">
                <MudItem xs="9">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="FullName"
                                  @bind-Value="model.FullName"
                                  For="@(() => model.FullName)" />
                </MudItem>

                <MudItem xs="3">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="Age"
                                  @bind-Value="model.Age"
                                  For="@(() => model.Age)" />
                </MudItem>
            </MudGrid >

            <MudDatePicker Variant="Variant.Outlined"
                           Label="Date Of Birth"
                           @bind-Date="_date" />

            <MudAutocomplete T="string"
                             Variant="Variant.Outlined"
                             Label="Department"
                             @bind-Value="model.Department"
                             SearchFunc="SearchDepartment"
                             Clearable="true"
                             ResetValueOnEmptyText="true"
                             For="@(() => model.Department)" />

            <MudTextField Variant="Variant.Outlined"
                          Label="Phone Number"
                          @bind-Value="model.PhoneNumber"
                          For="@(() => model.PhoneNumber)" />
            <MudItem Class="py-3">
            <DialogActions>
                <MudButton ButtonType="ButtonType.Submit"
                               class="me-2"
                               Color="Color.Primary"
                               Variant="Variant.Filled">
                             Save
                </MudButton>

                <MudButton Variant="Variant.Outlined"
                           OnClick="Cancel">
                    Cancel
                </MudButton>
            </DialogActions>
            </MudItem>
        </EditForm>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public UIActionEnum Action { get; set; } = UIActionEnum.Insert;

    [Parameter]
    public DateTime? _date { get; set; } = DateTime.Today;

    [Parameter]
    public EmployeeViewModel model { get; set; } = new();

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    private async Task OnValidSubmit()
    {
        if (_date is not null)
            model.DateOfBirth = _date.Value;

        if (Action == UIActionEnum.Insert)
            CreateEmployee();
        else
            UpdateEmployee();
    }

    private async Task CreateEmployee()
    {
        var result = await EmployeeService.CreateNewEmployee(model);

        if (result)
        {
            Snackbar.Add("Employee Add successfully!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add("Error saving employee.", Severity.Error);
        }
    }

    private async Task UpdateEmployee()
    {
        var result = await EmployeeService.UpdateEmployee(model);

        if (result)
        {
            Snackbar.Add("Employee Update successfully!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add("Error saving employee.", Severity.Error);
        }
    }

    private async Task<IEnumerable<string>> SearchDepartment(
    string value,
    CancellationToken cancellationToken)
    {
        var employees = await EmployeeService.GetAllEmployees();
      
        return employees
            .Select(x => x.Department)
            .Where(d => !string.IsNullOrWhiteSpace(d))
            .Distinct()
            .Where(d => string.IsNullOrEmpty(value)
                || d.Contains(value, StringComparison.OrdinalIgnoreCase));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
